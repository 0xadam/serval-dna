setup_AddThenList() {
   setup_servald_rhizome
   executeOk $servald rhizome list
   assert_rhizome_list
   echo "A test file" >file1
   echo "Another test file" >file2
}
test_AddThenList() {
   # Add first file
   executeOk $servald rhizome add file $sid '' file1 file1.manifest
   executeOk $servald rhizome list
   assert_rhizome_list file1
